/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>

<?php
/**
*The following function is used to strip out the <br /> tags from the Long Description when using HTML tags. If not using HTML tags, the <br /> is added as a line break when pressing carriage return.
*/

if ($_description):

$longdescription = $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description');

if (preg_match("/([\<])([^\>]{1,})*([\>])/i", $longdescription)) {?>
<h2><?php echo $this->__('Details') ?></h2>
<div class="std">
<?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
</div>

<?php } else { ?>
<h2><?php echo $this->__('Details') ?></h2>
<div class="std">
<?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), nl2br($_description), 'description') ?>
</div>
<?php };

/**
* End of <br /> removal code
*/
endif; ?> 
