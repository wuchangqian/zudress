/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
   <div class="currency-switch">
	
	<ul>
	   <li class="currency-block">
		<a  rel="nofollow"   id="top-currency"  href="#" title="Currencies" class="four outer"><?php echo $this->__('Currency:') ?>
		<em id="currency_inner"><?php echo $this->getCurrentCurrencyCode(); ?></em>
		</a>
		<span id="currency_arrow"></span>
		<div class="tab_right1 drop-menu">

		    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
		      <p>
		        <a class="tab_<?php echo $_code ?>" rel="nofollow" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><span><?php echo $_name ?></span></a>
		      </p>
		    <?php endforeach; ?>

		</div>
	   </li>
	</ul>
      
  </div>
<?php endif; ?>