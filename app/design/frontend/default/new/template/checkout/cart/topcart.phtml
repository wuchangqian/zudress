/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>

<div class="topcart">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="topcart-content">
    <?php if ($_cartQty>0): ?>
        <div class="summary">
            <?php if ($_cartQty==1): ?>
                <p class="amount"><?php echo $this->__('<a href="%s"><span>1</span> item</a> ', $this->getUrl('checkout/cart')) ?></p>
            <?php else: ?>
                <p class="amount"><?php echo $this->__('<a href="%s"><span>%s</span> items</a>', $this->getUrl('checkout/cart'), $_cartQty) ?></p>
            <?php endif ?>
           
        </div>
  
    <?php else: ?>
        <p class="empty"><?php echo $this->__('<span>0</span> item') ?></p>
    <?php endif ?>
    </div>
</div>

