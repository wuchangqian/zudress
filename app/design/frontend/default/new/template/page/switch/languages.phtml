/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
   <div class="currency-switch language-switch">
      <ul>
	    <li class="currency-block">
		 <a  rel="nofollow"   id="top-language"  href="#" title="Language" class="four outer <?php echo Mage::app()->getStore()->getCode(); ?>"><?php echo $this->__('Languages:') ?>
			<em id="currency_inner"><?php echo Mage::getStoreConfig('system/store/name') ; ?></em>
		 </a>
		<span id="currency_arrow"></span>
		<div class="tab_right1 drop-menu">
		<?php foreach ($this->getStores() as $_lang): ?>
			<p><a class="<?php echo $this->htmlEscape($_lang->getCode()) ?>"  href="<?php echo $_lang->getCurrentUrl() ?>"><?php echo $this->htmlEscape($_lang->getName()) ?></a></p>    
		<?php endforeach; ?>
		</div>
		</li>
	</ul>
</div>
<?php endif; ?>


