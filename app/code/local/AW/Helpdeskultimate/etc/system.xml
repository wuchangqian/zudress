                            <backend_model>helpdeskultimate/system_config_backend_integrationState</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </cf_enabled>
                        <show_dep_selector translate="label">
                            <label>Show departments selector on the contact form</label>
                            <comment>If No is selected, customers won't be able to choose the department when submitting a ticket from the contact form. In that case, ticket will be sent to primary department (if specified).</comment>
                            <frontend_type>select</frontend_type>
